# Arquivo de exemplo das variáveis de ambiente necessárias
# Copie este arquivo para .env.local e preencha com os valores corretos

# Configuração do Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Configuração do Redis Vercel/Upstash (necessário para WhatsApp)
# Para usar Vercel Redis, configure estas variáveis no seu projeto Vercel
# ou copie os valores do dashboard do Vercel para desenvolvimento local
VERCEL_REDIS_KV_URL="rediss://default:password@hostname:6379"
VERCEL_REDIS_KV_REST_API_URL="https://hostname.upstash.io"
VERCEL_REDIS_KV_REST_API_TOKEN="your-api-token"
VERCEL_REDIS_KV_REST_API_READ_ONLY_TOKEN="your-read-only-token"
VERCEL_REDIS_REDIS_URL="rediss://default:password@hostname:6379"

# Configuração de instância primária (para evitar múltiplas conexões WhatsApp)
# Defina como true apenas em uma instância da aplicação
PRIMARY_INSTANCE=true

# Configurações opcionais do Redis

# Timeout para operações Redis (em milissegundos)
REDIS_COMMAND_TIMEOUT=5000
REDIS_CONNECT_TIMEOUT=10000

# Máximo de tentativas por requisição Redis
REDIS_MAX_RETRIES=3
